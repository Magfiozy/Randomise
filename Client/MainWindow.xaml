        <DockPanel VerticalAlignment="Center" Margin="10">
            <Label Name="labelValue"></Label>
            <Slider Maximum="100" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="slValue" />
        </DockPanel>
    </Grid>
</Window>
